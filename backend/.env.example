# Solana Soldier - Backend Environment Variables
# Copy this to .env and fill in your values

# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=solana_soldier

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# API Keys
HELIUS_API_KEY=your_helius_api_key
SOLSCAN_API_KEY=your_solscan_api_key

# Admin Configuration
ADMIN_CHAT_ID=-1234567890
ADMIN_USERNAME=@yourusername

# Payment Addresses
PAYMENT_SOL_ADDRESS=your_sol_address
PAYMENT_ETH_ADDRESS=your_eth_address
PAYMENT_BTC_ADDRESS=your_btc_address
DAILY_ACCESS_PRICE_GBP=100

# Trading Configuration
LIVE_TRADING_ENABLED=true
AUTO_TRADE_ON_WHALE_SIGNAL=true

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*
